<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JuicyWiFiManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--https://medium.com/androiddevelopers/android-styling-common-theme-attributes-8f7c50c9eaba-->
        <!--Color primary used in: AppBar, MainHorizontalDivider, some big icons, ,-->

        <item name="colorPrimary">@color/blue_grey_700</item>
        <item name="colorPrimaryDark">@color/blue_grey_700_dark</item>
        <item name="colorPrimaryVariant">@color/blue_grey_700_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue_grey_500</item>
        <item name="colorSecondaryVariant">@color/blue_grey_500_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/blue_grey_500_light</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/blue_grey_200</item>
        <!--AlertDialogBackground-->
        <item name="colorBackgroundFloating">?attr/colorSurface</item>
        <item name="colorError">@color/red_500</item>

        <!--Color of icons in normal state-->
        <item name="colorControlNormal">@color/blue_grey_700_dark</item>
        <item name="colorControlActivated">@color/white</item>

        <!--Ripple color-->
        <item name="colorControlHighlight">@color/blue_grey_700_dark</item>

        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.JuicyWiFiManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ControlButtons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="autoSizeMaxTextSize">17sp</item>-->
        <!--<item name="autoSizeMinTextSize">7sp</item>-->
        <!--<item name="autoSizeStepGranularity">3sp</item>-->
        <!--<item name="autoSizeTextType">uniform</item>-->
        <item name="android:background">@drawable/shape_empty</item>
        <item name="backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/control_buttons_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


</resources>